apiVersion: v1
kind: Pod
metadata:
  name: "{{ include "persistent-layer.fullname" . }}-test-connection"
  labels:
    {{- include "persistent-layer.labels" . | nindent 4 }}
  annotations:
    "helm.sh/hook": test
spec:
  containers:
    - name: wget
      image: busybox
      command: ['wget']
      args: ['{{ include "persistent-layer.fullname" . }}:{{ .Values.service.port }}']
  restartPolicy: Never
