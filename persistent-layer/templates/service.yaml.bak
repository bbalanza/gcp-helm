apiVersion: v1
kind: Service
metadata:
  name: {{ include "persistent-layer.fullname" . }}
  labels:
    {{- include "persistent-layer.labels" . | nindent 4 }}
spec:
  type: {{ .Values.service.type }}
  ports:
    - port: {{ .Values.service.port }}
      targetPort: http
      protocol: TCP
      name: http
  selector:
    {{- include "persistent-layer.selectorLabels" . | nindent 4 }}
