apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: {{ include "persistent-layer.name" . | printf "%s-network-policy" }}
spec:
  podSelector:
    matchLabels: {{ include "persistent-layer.selectorLabels" .  | nindent 6 }}
  ingress:
  - from:
    - podSelector:
        matchLabels: 
          access: rest-api 
    - ipBlock:
        cidr: 35.191.0.0/16
    - ipBlock:
        cidr: 130.211.0.0/22
  egress:
  - to:
    - podSelector:
        matchLabels:
          access: rest-api
  policyTypes:
  - Ingress
  - Egress